<div class ="container">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

<!--name漢字の追加-->
　<div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

　 <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
   </div>
<!--name漢字の追加-->
<!--nameカナの追加-->
　<div class="field">
    <%= f.label :firest_name_kana %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

　<div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
  <!--nameカナの追加-->

  <!--郵便番号の追加-->
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <!--郵便番号の追加-->
    <div class="field">
      <%= f.label :post_code %><br />
      <%= f.email_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div>
    <!--郵便番号の追加-->

    <!--住所の追加-->
    <div class="field">
      <%= f.label :address %><br />
      <%= f.email_field :address, autofocus: true, autocomplete: "address" %>
    </div>
    <!--住所の追加-->

    <!--電話番号の追加-->
    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.email_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
    </div>
    <!--電話番号の追加-->

    <!--パスワードの追加-->
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>


    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
　　　<!--パスワードの追加-->

　　　<!--新規登録ボタンの追加-->
    <div class="actions">
          <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
    <!--新規登録ボタンの追加-->

  <% end %>


  <%= render "customers/shared/links" %>
</div>