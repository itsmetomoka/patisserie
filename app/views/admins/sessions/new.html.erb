<div class="container">

  <h2>管理者ログイン</h2>

  <div class="row">
    <div class="col-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field mx-auto" style="width: 360px;">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mx-auto" style="width: 300px;">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions  mx-auto" style="width: 100px;">
          <%= f.submit "ログイン" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

