<div class="container">

<!-- タイトル -->
<h2 class="m-4">注文履歴一覧</h2>

	<!-- 一覧 -->
	<table class="table">
		<thead>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</thead>
		<% @orders.each do |buy| %>
			<tbody>
				<td><%= link_to buy.created_at, admins_order_path(buy)%></td>
				<td><%= buy.customer.full_name %></td>
				<td><%= buy.order_count %></td>
				<td><%= buy.order_status %></td>
			</tbody>
		<% end %>
	</table>
</div>